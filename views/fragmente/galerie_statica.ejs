<div id="reflexie">
    <div id="text-normal">Galerie</div>
    <div id="text-reflectat">Galerie</div>
    </div>
<div id="grid-galerie">
    <% var num_shown = 0;
    for (let imag of locals.imagini) {
    var d=new Date();
    var h=d.getMinutes();
    if(h<15){
        var sfert_ora = "1";
    } else if (h<30 && h>=15) {
        var sfert_ora = "2";
    } else if (h<45 && h>=30){
        var sfert_ora = "3";
    } else if (h<60 && h>=45){
        var sfert_ora = "4";
    }
    if(imag.sfert_ora && imag.sfert_ora.includes(sfert_ora)){ %>
        <figure>
        <picture>
            <source srcset="<%- imag.fisier_mediu %>" media="(min-width: 651px) and (max-width: 1000px)"/>
            <source srcset="<%- imag.fisier_mic %>" media="(max-width:650px)"/>
            <img src="<%- imag.fisier %>" alt="imagine">
        </picture>
        <figcaption><%- imag.descriere %></figcaption>
    </figure>

<%      num_shown++;
}
if(num_shown==10)
    break; 
} 
%>
</div>